<section class="new-post">
  <h2 class="post-name">Create New Post</h2>
  <form class="new-post-form">
    <div>
      <label for="post-name">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post-content">Content</label>
      <input id="post-content" name="post-content" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="my-post">
  <h2 class="post-header">Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li class="post-edit">
      {{> post-info post}}
      <button><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a></button>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>